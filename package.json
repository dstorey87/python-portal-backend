{
  "name": "@python-portal/backend",
  "version": "1.0.0",
  "description": "Backend API microservice for Python Learning Portal with exercise management, user progress, and authentication",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "npm run clean && tsc",
    "dev": "concurrently \"tsc --watch\" \"nodemon dist/index.js\"",
    "clean": "rimraf dist",
    "lint": "eslint src --ext .ts --max-warnings 0",
    "lint:fix": "eslint src --ext .ts --fix",
    "type-check": "tsc --noEmit",
    "test": "npm run lint && npm run type-check && npm run build && npm run test:unit",
    "test:unit": "jest",
    "test:integration": "jest --testPathPattern=integration",
    "test:coverage": "jest --coverage",
    "prepublishOnly": "npm run test",
    "serve": "node dist/index.js",
    "start:prod": "NODE_ENV=production node dist/index.js",
    "docker:build": "docker build -t python-portal-backend .",
    "docker:run": "docker run -p 3000:3000 python-portal-backend",
    "migrate": "node dist/scripts/migrate.js",
    "seed": "node dist/scripts/seed.js"
  },
  "keywords": [
    "python",
    "learning",
    "api",
    "backend",
    "microservice",
    "express",
    "typescript",
    "education"
  ],
  "author": "Darren Storey <darren.storey87@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/dstorey87/python-portal-backend.git"
  },
  "bugs": {
    "url": "https://github.com/dstorey87/python-portal-backend/issues"
  },
  "homepage": "https://github.com/dstorey87/python-portal-backend#readme",
  "dependencies": {
    "@python-portal/types": "^1.0.0",
    "@python-portal/exercises": "^1.0.0",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "express-rate-limit": "^7.1.5",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "joi": "^17.11.0",
    "uuid": "^9.0.1",
    "sqlite3": "^5.1.6",
    "sqlite": "^5.1.1",
    "node-cron": "^3.0.3",
    "multer": "^1.4.5-lts.1",
    "axios": "^1.6.0"
  },
  "devDependencies": {
    "@types/node": "^20.14.0",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/compression": "^1.7.5",
    "@types/morgan": "^1.9.9",
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/uuid": "^9.0.7",
    "@types/multer": "^1.4.11",
    "@types/node-cron": "^3.0.11",
    "@types/jest": "^29.5.5",
    "@typescript-eslint/eslint-plugin": "^7.16.0",
    "@typescript-eslint/parser": "^7.16.0",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.3.2",
    "rimraf": "^5.0.8",
    "typescript": "^5.5.3",
    "concurrently": "^8.2.2",
    "nodemon": "^3.1.4",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "supertest": "^6.3.3",
    "@types/supertest": "^6.0.2"
  },
  "files": [
    "dist/**/*",
    "src/**/*",
    "database/**/*",
    "scripts/**/*",
    "Dockerfile",
    "docker-compose.yml",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": ["<rootDir>/src"],
    "testMatch": ["**/__tests__/**/*.test.ts"],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/types/**/*"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}